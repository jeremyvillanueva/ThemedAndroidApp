<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nz.co.tsg.themedapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="nz.co.tsg.themedapp.ThemedApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="nz.co.tsg.themedapp.ui.activities.ThemeSampleActivity"
            android:label="@string/app_name" />
        <activity
            android:name="nz.co.tsg.themedapp.ui.activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nz.co.tsg.themedapp.ui.foldinglist.FoldingListActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="nz.co.tsg.themedapp.ui.foldingtabbar.FoldingTabBarActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="nz.co.tsg.themedapp.ui.colorpicker.ColorPickerActivity"
            android:label="Color Palette Selection"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>